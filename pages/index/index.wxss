.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #00a1e9;
}
.header .top {
  width: 100%;
  display: flex;
  color: #fff;
  position: fixed;
  height: 88rpx;
  padding: 0 30rpx;
  background: #00a1e9;
  z-index: 9;
}
.header .top::after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -40rpx;
  z-index: -1;
  content: ' ';
  height: 80rpx;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #00a1e9;
}
.header .top .avatar {
  width: 88rpx;
  height: 88rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  background: #fff;
}
.header .top .info {
  padding-left: 20rpx;
}
.header .top .info .info_t {
  font-size: 42rpx;
}
.header .top .info .dec {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.header .top .info .dec text {
  padding: 12rpx;
}
.header .top .info .dec text:first-child {
  padding-left: 0;
}
.header .bot {
  padding: 0 30rpx;
  padding-left: 0;
  padding-top: 128rpx;
  padding-bottom: 40rpx;
  position: relative;
  display: flex;
  z-index: 1;
}
.header .bot .sj {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.header .bot::after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -60rpx;
  z-index: -1;
  content: ' ';
  height: 80rpx;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #00a1e9;
}
.header .bot::before {
  content: '';
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: -100rpx;
  left: 0;
  background: #00a1e9;
}
.header .bot .icon-shijian {
  font-size: 32rpx;
  color: #fff;
  padding: 0rpx 30rpx;
  position: relative;
  top: 4rpx;
}
.header .bot .showsj {
  width: 0%;
  height: 58rpx;
  background: #fff;
  box-shadow: 0 0 5rpx #ccc;
  border-radius: 10rpx;
  padding: 0 24rpx;
  position: relative;
  margin-left: -10rpx;
  margin-right: 34rpx;
  top: 6rpx;
  transition: all 0.4s ease-in;
  visibility: hidden;
}
.header .bot .showsj .showsjc {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
  overflow: hidden;
}
.header .bot .showsj::before {
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-right: 16rpx solid #fff;
  border-bottom: 8rpx solid transparent;
  content: '';
  position: absolute;
  left: -14rpx;
  top: 20rpx;
}
.header .bot .showsj .key {
  color: #333333;
}
.header .bot .showsj .value {
  color: #00a1e9;
}
.items {
  padding: 0 30rpx;
  position: relative;
  z-index: 2;
  padding-bottom: 20rpx;
}
.items .item {
  height: 140rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx #eee;
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}
.items .item .icon {
  width: 90rpx;
  height: 90rpx;
}
.items .item .info {
  flex: 1;
  padding: 0 20rpx;
}
.items .item .info .name {
  color: #333;
  font-size: 32rpx;
}
.items .item .info .name .icon-bangzhu {
  font-size: 32rpx;
  color: red;
  padding: 0 10rpx;
}
.items .item .info .dec {
  font-size: 26rpx;
  color: #999;
  height: 66rpx;
  overflow: hidden;
  line-height: 32rpx;
}
.items .item .right {
  width: 24rpx;
  height: 42rpx;
}
.showHelp {
  display: flex;
  position: fixed;
  width: 100vw;
  height: 100vh;
  background: rgba(51, 51, 51, 0.6);
  left: 0;
  top: 0;
  z-index: 999;
  align-items: center;
  padding: 0 30rpx;
}
.showHelp .model {
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.showHelp .model .title {
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  color: #333;
  font-size: 36rpx;
  background: #f5f5f5;
}
.showHelp .model .content {
  font-size: 28rpx;
  color: #666;
  padding: 54rpx 54rpx 72rpx 54rpx;
  line-height: 46rpx;
}
.showHelp .model .close {
  width: 578rpx;
  height: 100rpx;
  font-size: 32rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 0 auto;
  margin-bottom: 66rpx;
}
.icon-bangzhu {
  font-size: 32rpx;
  color: red;
  padding: 0 10rpx;
}
